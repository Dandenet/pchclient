<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Найден товар"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/product_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:text="Название:"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/product_name_text"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="-6dp"
        android:layout_toRightOf="@+id/product_name_text">

    </EditText>

    <TextView
        android:id="@+id/product_descr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name_text"
        android:layout_alignLeft="@+id/product_name_text"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="31dp"
        android:text="Описание:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/product_descr_text"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="-6dp"
        android:layout_toRightOf="@+id/product_descr_text">
    </EditText>

    <TextView
        android:id="@+id/product_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_descr_text"
        android:layout_alignLeft="@+id/product_descr_text"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="31dp"
        android:text="Цена:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/product_price_text"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="-6dp"
        android:layout_toRightOf="@+id/product_price_text">
    </EditText>

    <TextView
        android:id="@+id/product_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_text"
        android:layout_alignLeft="@+id/product_price_text"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="31dp"
        android:text="Штрих-код:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edit_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/product_code_text"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="-6dp"
        android:layout_toRightOf="@+id/product_code_text">
    </EditText>

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="Добавить в корзину" />



</RelativeLayout>

